<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Artist Page</title>
  </head>
  <body>
    <h1><%= artist.name %></h1>
    <!-- TODO we need to create a route to this show page -->
    <ul>
      <li>Bio: <%= artist.bio %></li>
    </ul>
    <h2>Murals</h2>
    <% murals.forEach(mural => { %>
      <a href="/murals/<%=mural.id%>">
        <img src="https://i.imgur.com/w9OmB8N.jpg" alt="mural" width="400" height="300">
    </a>
    <% }) %>
  </body>
</html>
