<%- include ../partials/header.ejs %>
  <h3>Edit an Artist</h3>
  <form class="pure-form pure-form-stacked" action="/artists/<%=artist.id%>?_method=PATCH" method="POST">
    <fieldset>
      <div class="pure-g">
        <div class="pure-u-1 pure-u-md-1-3">
          <label for="artist-name">Artist name</label>
          <input id="name" class="pure-u-23-24" type="text" placeholder="Picasso" name="name">
        </div>


        <div class="pure-u-1 pure-u-md-1-3">
          <label for="Bio">Bio</label>
          <input id="bio" class="pure-u-23-24" type="text" placeholder="This artist is recognizable to many Austonians" name="bio">
        </div>

      </div>

      <label for="terms" class="pure-checkbox">
            <input id="terms" type="checkbox"> I've read the terms and conditions
        </label>

      <button type="submit" class="pure-button pure-button-primary">Submit</button>
    </fieldset>
  </form>
<%- include ../partials/footer.ejs %>
